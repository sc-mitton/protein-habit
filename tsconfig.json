{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@components": ["src/components"],
      "@store/*": ["src/store/*"],
      "@theme": ["src/theme/index.ts"],
      "@types": ["src/types"],
      "@constants/*": ["src/constants/*"],
      "@styles/*": ["src/styles/*"],
      "@lotties/*": ["src/lotties/*"],
      "@assets/*": ["assets/*"]
    }
  }
}
