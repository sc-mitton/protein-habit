{
  "cli": {
    "version": ">=10.2.4",
    "appVersionSource": "local"
  },
  "build": {
    "production": {
      "android": {
        "buildType": "app-bundle"
      },
      "channel": "production",
      "autoIncrement": true
    },
    "development:simulator": {
      "developmentClient": true,
      "ios": {
        "simulator": true
      }
    },
    "development": {
      "developmentClient": true,
      "channel": "development"
    },
    "preview": {
      "distribution": "internal",
      "autoIncrement": true,
      "android": {
        "buildType": "apk"
      },
      "channel": "preview"
    }
  },
  "submit": {
    "production": {}
  }
}
